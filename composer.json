{
    "name": "billingserv/uk-vat-validator",
    "description": "A Composer package to validate UK VAT numbers using the HMRC API.",
    "type": "library",
    "homepage": "https://www.billingserv.com",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "VatValidator\\": "src/"
        }
    },
    "require": {
        "guzzlehttp/guzzle": "^7.0",
        "vlucas/phpdotenv": "^5.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "extra": {
        "laravel": {
            "providers": [
                "VatValidator\\VatValidatorProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
